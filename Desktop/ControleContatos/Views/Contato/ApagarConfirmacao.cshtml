@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de Apagar o Contato";
}

<div class="text-center">
    <h1>Realmente deseja apagar o contato?</h1>
    <h2>@Model.Nome</h2>
</div>

<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-primary" role="button" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id">Confirmar</a>

    